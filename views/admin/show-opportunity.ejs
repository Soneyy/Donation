<%- include('../partials/admin/adminHeader') %>
<%- include('../partials/admin/adminAside') %>

<main id="main" class="main">

    <div class="bg-white shadow-sm p-3">
        <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
        <h5 class="m-0 color-theme d-inline-block">Volunteer Apply List</h5>
    </div>
    <div class="container">
        <div class="col-md-12 mt-3">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">S.n</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">organization</th>
                    <th scope="col">title</th>
                    <th scope="col">location</th>
                    <th scope="col">phone</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                <% for(let i = 0; i < opportunityData.length; i++) { %>
                    <tr>
                        <th scope="row"> <%= i + 1 %> </th>
                        <td> <%= opportunityData[i].volunteer.firstName %> </td>
                        <td> <%= opportunityData[i].volunteer.email %> </td>
                        <td> <%= opportunityData[i].organization %> </td>
                        <td> <%= opportunityData[i].title %> </td>
                        <td> <%= opportunityData[i].location %> </td>
                        <td> <%= opportunityData[i].phone %> </td>
                        <td> <%= opportunityData[i].status %> </td>
                        <td>
                            <a href="/admin/opportunity-details/<%= opportunityData[i]._id %>" class="btn btn-success">View</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>

</main>
