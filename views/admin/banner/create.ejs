<%- include('../../partials/admin/adminHeader') %>
<%- include('../../partials/admin/adminAside') %>
<main id="main" class="main">
    <div class="bg-white shadow-sm p-3">
        <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
        <h5 class="m-0 color-theme d-inline-block">Add Banner</h5>
    </div>
    <div class="row">
        <div class="col-md-12 mt-5">
            <form action="" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="title">Title</label>
                    <input type="text" name="title" required id="title" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <label for="image">Image</label>
                    <input type="file" name="image" required id="image" class="form-control">
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-success">Create Banner</button>
                </div>
            </form>
        </div>
    </div>
</main>
