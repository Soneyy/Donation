<%- include('../partials/admin/adminHeader') %>
<%- include('../partials/admin/adminAside') %>

<main id="main" class="main">

    <div class="bg-white shadow-sm p-3">
        <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
        <h5 class="m-0 color-theme d-inline-block">Agent </h5>
    </div>

    <div class="bg-white col-md-12 mt-3">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">S.n</th>
                <th scope="col">Agent name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Joined time</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i = 0; i < agents.length; i++) { %>
                <tr>
                    <th scope="row"> <%= i + 1 %> </th>
                    <td> <%= agents[i].firstName + " " + agents[i].lastName %> </td>
                    <td> <%= agents[i].email %> </td>
                    <td> <%= agents[i].phone %> </td>
                    <td> <%= agents[i].joinedTime.toLocaleString("en-IN", {
                            dateStyle: "medium",
                            timeStyle: "short"
                        }) %> </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</main>